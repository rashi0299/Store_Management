<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/image"
        android:text="Item"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/itemDemand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itemName"
        android:layout_alignBottom="@+id/itemName"
        android:layout_marginEnd="84dp"
        android:layout_toStartOf="@+id/itemPrice"
        android:inputType="number"
        android:text="Quantity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/itemDemand"
        android:layout_alignBottom="@+id/itemDemand"
        android:layout_alignParentEnd="true"
        android:text="Price"
        android:textSize="20sp" />

</RelativeLayout>